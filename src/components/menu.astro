    const handleMenuClick = (menuId: number) => {
        const cardContainer = document.getElementById('card-container');
        let content = '';
        const selectedServices = services[menuId] || [];

        // Generar las tarjetas en una matriz de 8x3 
        const rows = 8;
        const cols = 3;
        let index = 0;

        // Recorrer filas y columnas y generar tarjetas
        for (let row = 0; row < rows; row++) {
            content += `<div class="row">`; // Inicio de una nueva fila

            for (let col = 0; col < cols; col++) {
                if (index < selectedServices.length) {
                    content += `
                        <div class="col-md-4">
                            <div class="card">
                                <img src="${selectedServices[index].img}" class="card-img-top" alt="${selectedServices[index].title}">
                                <div class="card-body">
                                    <h5 class="card-title">${selectedServices[index].title}</h5>
                                    <p class="card-text">${selectedServices[index].description}</p>
                                </div>
                            </div>
                        </div>`;
                    index++;
                } else {
                    // Si no hay más servicios, se agregan espacios vacíos
                    content += `<div class="col-md-4"></div>`;
                }
            }

            content += `</div>`; // Fin de la fila
        }

        // Verificar si cardContainer es null antes de intentar actualizar el contenido
        if (cardContainer) {
            cardContainer.innerHTML = content;
        }
    };

